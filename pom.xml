                <!--<extensions>true</extensions>-->
                <!--<configuration>-->
                    <!--<instructions>-->
                        <!--<_include>-osgi.bnd</_include>-->
                    <!--</instructions>-->
                    <!--<manifestLocation>${project.build.directory}/jar-with-deps/META-INF</manifestLocation>-->
                <!--</configuration>-->
